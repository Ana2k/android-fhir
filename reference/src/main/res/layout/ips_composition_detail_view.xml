<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/details_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show ID"

        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/details_author_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show author title"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/details_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show date"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/section_title_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show patient name"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/section_title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show patient dob"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/section_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show details address"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/section_title_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show resource id"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/section_title_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OPEN FRAGMENT -- to show dose"
        tools:ignore="MissingConstraints" />


</LinearLayout>